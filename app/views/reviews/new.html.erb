<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>

        <%= f.submit class: "btn btn-primary" %>
      <% end %>
      <br>
      <%= link_to "Homepage", restaurants_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

